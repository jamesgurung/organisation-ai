  <div>
    &#x1F916; <b>AI Assistant</b><a href="/" style="margin-left: 18px">New Chat</a>
  </div>
  <div>
      <span class="hide-mobile">@User.Identity.Name </span><div id="credits"><div></div></div> <a href="/auth/logout">Logout</a>
  </div>
</header>

